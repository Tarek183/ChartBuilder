@model IEnumerable<SaaS__Chart__Builder__App.Models.Shop__Client>
@{
    ViewBag.Title = "ClientList";
    Layout = "~/Views/Shared/_LayoutBack.cshtml";
}

<div class="content-wrapper">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title"><strong>Clients List</strong></h4>
            <div class="row">
                <div class="col-12">
                    <div class="table-responsive">
                        <table id="order-listing" class="table">
                            <thead>
                                <tr class="bg-primary text-white">
                                    <th>Firstname</th>
                                    <th>Lastname</th>
                                    <th>Adress</th>
                                    <th>GSM</th>
                                    <th>Email</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            @foreach (var item in Model)
                            {
                                <tbody>
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.First__Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Last__Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Adress)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.GSM)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Email)
                                        </td>

                                        <td>
                                            <button class="btn btn-outline-success">Edit</button>
                                            <button class="btn btn-outline-danger">Delete</button>
                                            <button class="btn btn-outline-primary">View</button>
                                        </td>
                                    </tr>

                                </tbody>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

