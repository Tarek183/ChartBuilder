@model SaaS__Chart__Builder__App.Models.Dashboard__Chart____88____core__Menus
@{
    ViewBag.Title = "CreateChart";
    Layout = "~/Views/Shared/_LayoutBack.cshtml";
}
<div class="content-wrapper">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title"><strong>Create Chart</strong></h4>
            <div class="row">
                <div class="col-12">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <label for="exampleInputName1">Choose a chart:</label>
                            <select name="Chart" class="form-control">
                                @foreach (var c in ViewData["charts"] as IList<SaaS__Chart__Builder__App.Models.Dashboard__Chart>)
                                {
                                    <option>
                                        @c.Title
                                    </option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail3">Choose Menu:</label>
                            <select name="Menu" class="form-control">
                                @foreach (var m in ViewData["menus"] as IList<SaaS__Chart__Builder__App.Models.core__Menus>)
                                {
                                    <option>
                                        @m.Title
                                    </option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputName2">Chart Title:</label>
                            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                        </div>

                        <button type="submit" class="btn btn-success mr-2">Submit</button>
                        <button class="btn btn-light">Cancel</button>
                    }
                     </div>
                </div>
        </div>
    </div>
</div>